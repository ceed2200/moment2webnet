<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
</head>
<body>
<div class= "body">
    <header>
        <a asp-controller="Home" asp-action="Index"><img src="~/cityimg.png" alt=""><span>Städer i Sverige</span></a>
    </header>
        <nav>
            <ul>
                <li>
                    <a class="link" asp-area="" asp-controller="Home" asp-action="Index">Start</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Cities">Lägg till stad</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Counties">Landskap</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="About">Om sidan</a>
                </li>
            </ul>
        </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
